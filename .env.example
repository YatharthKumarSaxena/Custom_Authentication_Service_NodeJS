# ------------------ üîå Server --------------------
PORT_NUMBER=8080

# ------------------ üçÉ MongoDB -------------------
DB_NAME=custom_auth_service_db
DB_URL=mongodb://localhost:27017/custom_auth_service_db?replicaSet=rs0

# ------------------ üîê JWT -----------------------
ACCESS_TOKEN_SECRET_CODE=your_access_token_secret_here
REFRESH_TOKEN_SECRET_CODE=your_refresh_token_secret_here
ACCESS_TOKEN_EXPIRY=900                  # in seconds
REFRESH_TOKEN_EXPIRY=604800              # in seconds (7 days)
REFRESH_THRESHOLD_IN_MS=172800000        # 2 days in milliseconds
RESET_TOKEN_EXPIRY=3600                  # in seconds (1 hour)
VERIFICATION_TOKEN_EXPIRY=900            # in seconds (15 minutes)

# ------------------ üîë Bcrypt --------------------
SALT=12

# ------------------ üõ° Admin User ----------------
ADMIN_NAME=Admin Name
ADMIN_COUNTRY_CODE=91
ADMIN_NUMBER=XXXXXXXXXX
ADMIN_EMAIL_ID=admin@example.com
ADMIN_PASSWORD=strong_admin_password

# ------------------ üèó Infrastructure ------------
IP_ADDRESS_CODE=1
USER_REGISTRATION_CAPACITY=100000

# ------------------ üç™ Cookie Config -------------
COOKIE_HTTP_ONLY=false
COOKIE_SECURE=false
COOKIE_SAME_SITE=Strict
COOKIE_DOMAIN=localhost

# ------------------ üíª Device Info ----------------
DEVICE_UUID=your-device-uuid-here
DEVICE_TYPE=LAPTOP
DEVICE_NAME=Your-Device-Name

# ------------------ üßº Auth Logs Cleanup Config ---
AUTH_LOG_CLEANUP_CRON=0 5 * * 0          # Every Sunday at 5 AM
AUTH_LOG_CLEANUP_TIMEZONE=Asia/Kolkata
AUTH_LOG_RETENTION_DAYS=90

# ------------------ üßπ User Cleanup Config --------
USER_CLEANUP_CRON=0 3 * * 0              # Every Sunday at 3 AM
USER_CLEANUP_TIMEZONE=Asia/Kolkata
USER_RETENTION_DAYS=60

# ------------------ üåê Environment ---------------
NODE_ENV=development

# ------------------ üî¥ Redis Configuration ------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=                          # Leave blank if no password
REDIS_DB=0                               # Default DB index
REDIS_MAX_RETRY_ATTEMPTS=10
REDIS_RETRY_INITIAL_DELAY=100            # milliseconds
REDIS_RETRY_MAX_DELAY=2000               # milliseconds

# ------------------ ‚è≥ Global Rate Limiter ------------------
RATE_LIMIT_WINDOW=10                     # minutes
RATE_LIMIT_MAX=100                       # requests per window

# ------------------ üîê Authentication ------------------
AUTH_MODE=both                           # options: email | phone | both | either
VERIFICATION_MODE=otp                    # otp | link
AUTO_LOGIN_AFTER_VERIFICATION=true       # true | false
IS_2FA_FEATURE_ENABLED=true              # true | false
AUTO_EMAIL_VERIFICATION=true             # Auto-send email verification on signup
AUTO_PHONE_VERIFICATION=true             # Auto-send phone verification on signup
FIRST_NAME_SETTING=Optional              # Optional | Mandatory | Disabled
WHITELISTED_DEVICE_UUIDS=your-device-uuid-here,another-uuid-here

# ------------------ üìß Email Configuration (SMTP + Branding) ---
# Gmail SMTP Setup (Get App Password: https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=xxxx xxxx xxxx xxxx        # 16-digit Gmail App Password

# Email Sender Configuration
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Admin Panel Service

# Application URLs
ADMIN_PANEL_LINK=http://localhost:8080/admin
FRONTEND_URL=http://localhost:3030

# --- BRANDING ---
COMPANY_NAME="Admin Panel Service"
COMPANY_LOGO="https://ui-avatars.com/api/?name=Admin+Panel+Service&size=150&background=4f46e5&color=fff&bold=true&fontSize=0.4"
SUPPORT_EMAIL="support@yourcompany.com"
COMPANY_ADDRESS="Your City, Your State, Your Country"

# ------------------ üì± SMS Configuration ---
SMS_MODE=mock                            # "mock" | "termux-ssh" | "real"
SMS_ENABLED=true                         # Enable/disable SMS notifications
TEST_PHONE_NUMBER=+91XXXXXXXXXX          # Your phone number for testing

# Termux SSH Configuration (for laptop ‚Üí mobile SMS bridge)
# Setup guide: See TERMUX_SETUP.md
TERMUX_IP=192.168.1.100                  # Mobile IP address (from Termux: ifconfig wlan0)
TERMUX_PORT=8022                         # Default Termux SSH port
TERMUX_USER=u0_a123                      # Termux username (from: whoami)

# ------------------ üß™ Testing Configuration ---
TEST_EMAIL=your-test-email@gmail.com     # Email for template testing
TEST_PHONE=+91XXXXXXXXXX                 # Phone for template testing

# ------------------ üì∏ Audit Snapshot Configuration ---
# Options: FULL | CHANGED_ONLY
# FULL - Complete entity snapshot (all fields)
# CHANGED_ONLY - Only fields that changed
AUDIT_MODE=CHANGED_ONLY
